<MessagesScreen>:
    BoxLayout:
        orientation: "vertical"
        MDTopAppBar:
            title: "Сообщения"
            left_action_items: [["arrow-left", lambda x: app.switch_screen('chats_screen')]]
        ScrollView:
            MDList:
                id: messages_list
        BoxLayout:
            size_hint_y: None
            height: dp(50)
            spacing: dp(10)
            padding: dp(10)

            MDTextField:
                id: message_input
                hint_text: "Введите сообщение"
                size_hint_x: 0.8

            MDRaisedButton:
                text: "Отправить"
                size_hint_x: 0.2
                on_release: root.send_message(message_input.text)

<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(10)

        MDTextField:
            id: email
            hint_text: "Email"
            mode: "rectangle"

        MDTextField:
            id: password
            hint_text: "Пароль"
            password: True
            mode: "rectangle"

        MDRaisedButton:
            text: "Войти"
            pos_hint: {"center_x": 0.5}
            on_release: root.login(email.text, password.text)

        MDRaisedButton:
            text: "Регистрация"
            pos_hint: {"center_x": 0.5}
            on_release: root.register(email.text, password.text)

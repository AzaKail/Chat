<MessagesScreen>:
    BoxLayout:
        orientation: "vertical"

        ScrollView:
            MDList:
                id: messages_list

        BoxLayout:
            size_hint_y: 0.1
            padding: dp(10)

            MDTextField:
                id: message_input
                hint_text: "Введите сообщение"
                size_hint_x: 0.8

            MDRaisedButton:
                text: "Отправить"
                size_hint_x: 0.2
                on_release: root.send_message(message_input.text)
